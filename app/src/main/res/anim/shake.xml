<set xmlns:android="http://schemas.android.com/apk/res/android">
    <rotate
        android:duration="10"
        android:fromDegrees="-2"
        android:pivotX="30%"
        android:pivotY="30%"
        android:repeatCount="2"
        android:repeatMode="reverse"
        android:interpolator="@android:anim/linear_interpolator"
        android:toDegrees="2" />
    <translate
        android:fromXDelta="-5"
        android:toXDelta="5"
        android:repeatCount="2"
        android:repeatMode="reverse"
        android:interpolator="@android:anim/linear_interpolator"
        android:duration="10" />
</set>
