<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#E4DFAB8C"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name_of_timer"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="126dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#E4FFFFFF"
            android:text="TextView"

            android:textSize="20dp" />

        <TextView
            android:id="@+id/the_timer_itself_seconds"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_weight="1"
            android:textColor="#E4FFFFFF"
            android:drawableStart="@drawable/baseline_timer_black_24dp"
            android:drawableLeft="@drawable/baseline_timer_black_24dp"
            android:text="TextView"

            android:textSize="20dp" />

    </LinearLayout>

</RelativeLayout>