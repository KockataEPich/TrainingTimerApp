<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PopUpForTimeSetter"
    android:background="@drawable/textinborder">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="732dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="1dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#80A79086"

        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#E4375EA3"
            android:orientation="horizontal"></LinearLayout>

        <EditText
            android:id="@+id/timer_name"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/textinborder"
            android:ems="10"
            android:inputType="textPersonName"
            android:maxLength="13"
            android:text="Name"
            android:textColor="#E4FFFFFF"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textView5"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:text="Minutes"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/add_min_button"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/baseline_add_box_black_48dp"
                android:backgroundTint="#E4375EA3"
                />

            <EditText
                android:id="@+id/text_view_of_minutes"
                android:layout_width="186dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/textinborder"
                android:ems="10"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="2"
                android:textColor="#E4FFFFFF"
                android:textSize="30dp" />

            <Button
                android:id="@+id/subtract_minute_button"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/baseline_indeterminate_check_box_black_48dp"
                android:backgroundTint="#E4375EA3"
              />

        </LinearLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/listSeparatorTextViewStyle"
            android:textSize="15dp"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:text="Seconds" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/add_seconds_button"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/baseline_add_box_black_48dp"
                android:backgroundTint="#E4375EA3"
                />

            <EditText
                android:id="@+id/text_view_of_seconds"
                android:layout_width="273dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/textinborder"
                android:ems="10"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="2"
                android:textColor="#E4FFFFFF"
                android:textSize="30dp" />

            <Button
                android:id="@+id/subtract_second_button"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/baseline_indeterminate_check_box_black_48dp"
                android:backgroundTint="#E4375EA3"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:animationCache="false"
            android:gravity="center"
            android:orientation="horizontal">


            <Spinner
                android:id="@+id/spinner"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="193dp"
                android:layout_height="38dp"
                android:layout_marginRight="50dp"
                android:layout_weight="1"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>