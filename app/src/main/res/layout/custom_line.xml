<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="406dp"
        android:layout_height="60dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/resized_light_gray"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_of_program"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="TextView"
            android:textColor="#E4FFFFFF"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#FFFFFF"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/date_of_program"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="133dp"
                android:layout_height="match_parent"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/baseline_date_range_black_18dp"
                android:drawableLeft="@drawable/baseline_date_range_black_18dp"
                android:text="TextView"
                android:textColor="#E4FFFFFF"
                android:textSize="18dp" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>